FROM mariadb:latest
RUN apt update 
RUN apt install -y mariadb-client 
RUN mkdir -p /var/sql
COPY woodytoys.sql /var/sql
# Copier le script shell dans le conteneur
COPY sqlcmd.sh /usr/local/bin/

# Rendre le script exécutable
RUN chmod +x /usr/local/bin/setup.sh

# Exécuter le script lors du démarrage du conteneur
CMD ["setup.sh"]



